<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout disableAnsi="false"
                           pattern="[%d{HH:mm:ss}] [%highlight{%t/%level}{FATAL=red, ERROR=bright red, WARN=yellow, INFO=bright blue}] (%style{%c{1}}{cyan}) %msg%n"/>
        </Console>

        <RollingFile name="LogToRollingFile"
                     fileName="${basePath}/latest.log"
                     filePattern="${basePath}/app-%d{yyyy-MM-dd}-%i.log.gz">

            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] [%t/%level] (%c{1}) %msg%n"/>

            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>

            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="LogToRollingFile"/>
        </Root>
    </Loggers>
</Configuration>